<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="vnsoft01_account_invoice_form_view">
            <field name="name">vnsoft01.account.invoice.form.view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="research_group" />
                         <field name="order_user" />
                    </xpath>
                 </data>
            </field>
        </record>
        <record model="ir.ui.view" id="vnsoft01_account_invoice_tree_view">
            <field name="name">vnsoft01.account.invoice.tree.view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="research_group" />
                         <field name="order_user" />
                    </xpath>
                 </data>
            </field>
        </record>
    </data>
</openerp>