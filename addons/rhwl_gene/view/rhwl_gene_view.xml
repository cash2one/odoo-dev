<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="rhwl_easy_genes_view_tree">
            <field name="name">rhwl.easy.genes.view.tree</field>
            <field name="model">rhwl.easy.genes</field>
            <field name="arch" type="xml">
                <tree string="易感基因" >
                    <field name="batch_no"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="cust_name"/>
                    <field name="sex"/>
                    <field name="identity"/>
                    <field name="mobile"/>
                    <field name="birthday"/>
                    <field name="except_note"/>
                    <field name="confirm_note"/>
                    <field name="state"/>
                    <button name="action_state_confirm"  states="draft" string="确认" type="object"
                                 icon="gtk-apply" />
                    <button name="action_state_except" states="draft" string="信息异常" type="object"
                             icon="gtk-cancel" context="{'view_type':'tree'}"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="rhwl_easy_genes_view_form">
            <field name="name">rhwl.easy.genes.view.form</field>
            <field name="model">rhwl.easy.genes</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_state_except" string="信息异常反馈" type="object"/>
                        <button name="action_state_exceptconfirm" string="信息异常回馈" type="object"/>
                        <button name="action_state_confirm" string="样本确认" type="object"/>
                        <button name="action_state_dna" string="DNA异常" type="object"/>
                        <button name="action_state_ok" string="检测完成" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,ok,done"
                               statusbar_colors='{"except":"red,","dna_except":"red","done":"blue"}' readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="batch_no"/>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="cust_name"/>
                                <field name="except_note" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="identity"/>
                                <field name="mobile"/>
                                <field name="birthday"/>
                                <field name="sex"/>
                                <field name="confirm_note" attrs="{'readonly':[('state','!=','except')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="日志">
                                <field name="log" attrs="{'readonly':True}">
                                    <tree>
                                        <field name="date"/>
                                        <field name="user_id"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="备注">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="rhwl_easy_genes_search">
            <field name="name">rhwl.easy.genes.search</field>
            <field name="model">rhwl.easy.genes</field>
            <field name="arch" type="xml">
                <search string="Gene">
                    <field name="batch_no"/>
                    <field name="name"/>
                    <field name="cust_name"/>
                    <field name="mobile"/>
                    <field name="identity"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="批号" icon="terp-partner" domain="[]" context="{'group_by':'batch_no'}"/>
                        <filter string="日期" icon="terp-partner" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_easy_genes" model="ir.actions.act_window">
            <field name="name">易感样本信息</field>
            <field name="res_model">rhwl.easy.genes</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>
                    Click to start creating a new
                </p>
            </field>
        </record>

        <menuitem id="menu_easy_genes" parent="base.menu_sales" name="易感基因样本" sequence="15"
                  action='action_easy_genes'/>

        <record model="ir.ui.view" id="rhwl_easy_genes_popup_view_form">
            <field name="name">rhwl.easy.genes.popup.view.form</field>
            <field name="model">rhwl.easy.genes.popup</field>
            <field name="arch" type="xml">
                <form>
                    <group cols="8">
                        <field name="note"/>
                    </group>
                    <footer>
                        <button string="确认" name="action_ok" type="object" class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>