            <field name="model">rhwl.easy.genes.new</field>
            <field name="arch" type="xml">
                <tree string="易感基因" >
                    <field name="receiv_date"/>
                    <field name="name"/>
                    <field name="cust_name"/>
                    <field name="sex"/>
                    <field name="identity"/>
                    <field name="batch_no"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
