                        <button name="action_state_done" string="报告已发放" states="confirm,except_confirm" type="object" groups="rhwl_gene.rhwl_base_gene"/>
                        <button name="action_state_reuse" string="需重采样" states="draft,confirm,except,except_confirm,dna_except" type="object" groups="rhwl_gene.rhwl_base_gene"/>
