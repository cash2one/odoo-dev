<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="purchase_apply_view_tree">
            <field name="name">purchase.apply.view.tree</field>
            <field name="model">purchase.order.apply</field>
            <field name="arch" type="xml">
                <tree string="Purchase Apply" >
                    <field name="name"/>
                    <field name="date"/>
                    <field name="dept"/>
                    <field name="user_id"/>
                    <field name="need_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="purchase_apply_view_form">
            <field name="name">purchase.apply.view.form</field>
            <field name="model">purchase.order.apply</field>
            <field name="arch" type="xml">
                <form string="Purchase Apply">
                    <header>
                        <button name="action_confirm" states="draft" string="确认" type="object" groups="base.group_user"/>
                        <button name="action_dept" states="confirm" string="部门批准" type="object" groups="base.group_user"/>
                        <button name="action_quotation" states="dept" string="询价确认" type="object" groups="base.group_user"/>
                        <button name="action_create_quotation" states="dept" string="生成招标/询价单" type="object" groups="base.group_user"/>
                        <button name="action_inspector" states="quotation" string="总监批准" type="object" groups="base.group_user"/>
                        <button name="action_account" states="inspector" string="财务核准" type="object" groups="base.group_user"/>
                        <button name="action_chief" states="account" string="总裁批准" type="object" groups="base.group_user"/>
                        <button name="action_refuse" states="confirm,dept,inspector,account" string="退回" type="object" groups="base.group_user"/>
                        <button name="action_reset" states="refuse" string="重置草稿" type="object" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done,refuse"
                               statusbar_colors='{"refuse":"red","done":"blue"}' readonly="1"/>
                    </header>
                    <sheet >
                        <group>
                            <group>
                                 <field name="name"/>
                                <field name="user_id"/>
                                <field name="dept" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="reason"/>
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="need_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="申请物料明细">
                                <field name="line" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="brand"/>
                                        <field name="default_code"/>
                                        <field name="attribute" widget="many2many_tags"/>
                                        <field name="qty"/>
                                        <field name="uom_po_id"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="备注">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="purchase_apply_search">
            <field name="name">purchase.apply.search</field>
            <field name="model">purchase.order.apply</field>
            <field name="arch" type="xml">
                <search string="Purchase Apply">
                    <field name="name"/>
                    <field name="user_id"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="部门" icon="terp-partner" domain="[]" context="{'group_by':'dept'}"/>
                        <filter string="申请日期" icon="terp-partner" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_purchase_order_apply" model="ir.actions.act_window">
            <field name="name">采购申请</field>
            <field name="res_model">purchase.order.apply</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>
                    Click to start creating a new
                </p>
            </field>
        </record>

        <menuitem id="menu_purchase_order_apply" parent="purchase.menu_procurement_management" name="采购申请" sequence="1"
                  action='action_purchase_order_apply'/>
    </data>
</openerp>