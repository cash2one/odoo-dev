<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_sample_tree">
            <field name="name">sale.sample.tree</field>
            <field name="model">sale.sampleone</field>
            <field name="arch" type="xml">
                <tree string="Sale Sampleone">
                    <field name="name"/>
                    <field name="sampletype"/>
                    <field name="receiv_user"/>
                    <field name="lyyy"/>
                    <field name="lyys"/>
                    <field name="cxyy"/>
                    <field name="cxys"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_sample_form">
            <field name="name">sale.sample.form</field>
            <field name="model">sale.sampleone</field>
            <field name="arch" type="xml">
                <form string="Sale Sample">
                    <header>
                        <button name="action_done" states="draft" string="done" type="object"
                                groups="base.group_user" class="oe_highlight"/>
                        <button name="action_cancel" states="draft" string="Cancel" type="object"
                                groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"
                               statusbar_colors='{"cancel":"red","done":"blue"}' readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" colspan='2' on_change="onchange_check_sample(name)"/>
                                <field name="sampletype" colspan='2'/>
                                <field name="cx_date" colspan='2'/>
                                <field name="is_reused" colspan='2'/>
                                <field name="reuse_type" colspan='2'/>
                                <field name="reuse_name" colspan='2'/>
                                <field name="is_free" colspan='2'/>
                            </group>
                            <group>
                                <field name="receiv_user" colspan='2'/>
                                <field name="state_id" colspan='2'/>
                                <field name="city" colspan='2'/>
                                <field name="lyyy" colspan='2'/>
                                <field name="lyys" colspan='2'/>
                                <field name="cxyy" colspan='2'/>
                                <field name="cxys" colspan='2'/>
                                <field name="fzr" colspan='2'/>
                            </group>
                        </group>

                        <notebook>
                            <page string="孕妇信息">
                                <group col="8" colspan="4">
                                    <group col="4" colspan="4">
                                        <group colspan="4">
                                            <field name="yfxm"/>
                                        </group>
                                        <group col="4" colspan="4">
                                            <group colspan="2">
                                                <field name="yfzjmc" width="90"/>
                                            </group>
                                            <group colspan="2">
                                                <field name="yfzjmcother" nolabel="1"/>
                                            </group>
                                        </group>
                                        <field name="yfage"/>
                                        <newline/>
                                        <field name="yflastyj"/>
                                        <newline/>
                                        <field name="yftelno"/>
                                        <newline/>
                                        <field name="yfpostaddr"/>
                                        <newline/>
                                        <field name="yfheight"/>
                                    </group>
                                    <group col="4" colspan="4">
                                        <group col="4" colspan="4">
                                            <group colspan="2">
                                                <field name="yfyzweek"/>
                                            </group>
                                            <group colspan="2">
                                                <field name="yfyzday" nolabel="1"/>
                                            </group>
                                        </group>
                                        <group colspan="4">
                                            <field name="yfzjmc_no"/>
                                        </group>
                                        <field name="yffqage"/>
                                        <newline/>
                                        <field name="yfyjzq"/>
                                        <newline/>
                                        <field name="yfjjlltel"/>
                                        <newline/>
                                        <field name="yfpostno"/>
                                        <newline/>
                                        <field name="yfweight"/>
                                        <newline/>
                                    </group>
                                </group>
                            </page>
                            <page string="孕产史">
                                <group>
                                    <group>
                                        <field name="yfycount"/>
                                        <field name="yfzcount"/>
                                    </group>
                                    <group>
                                        <field name="yfblycs"/>
                                        <field name="yfblycstext"/>
                                        <field name="yffqsfrsthx"/>
                                        <field name="yffqsfrsthxtext"/>
                                        <field name="yfjzycb"/>
                                        <field name="yfjzycbtext"/>
                                    </group>
                                </group>
                            </page>
                            <page string="产前检查">
                                <group>
                                    <group>
                                        <field name="yfyczk"/>
                                        <field name="yfyczktext"/>
                                        <field name="yfissgyr"/>
                                        <field name="yfcsjc"/>
                                        <field name="yfcsjctext"/>

                                    </group>
                                    <group>
                                        <field name="yfxqsc"/>
                                        <field name="yfxqsctext"/>
                                        <field name="yfyyjrxccss"/>
                                        <field name="yfyyjrxccssdate"/>
                                    </group>
                                </group>
                            </page>
                            <page string="其它信息">
                                <group>
                                    <group>
                                        <field name="yfxbzl"/>
                                        <field name="yfxbzltext"/>

                                        <field name="yftsqkbz"/>
                                    </group>
                                    <group>
                                        <field name="yfzlfz"/>
                                        <field name="yfzlfztext"/>
                                        <field name="yfynnytsx"/>
                                        <field name="yfynnytsxtext"/>
                                    </group>
                                </group>
                            </page>
                            <page string="备注">
                                <field name="note"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_sample_search">
            <field name="name">sale.sample.search</field>
            <field name="model">sale.sampleone</field>
            <field name="arch" type="xml">
                <search string="Sale Sample">
                    <field name="name" string="Sample NO"/>
                    <field name="sampletype"/>
                    <seperaotr/>

                    <group expand="0" string="Group By...">
                        <filter string="Partner" icon="terp-partner" domain="[]" context="{'group_by':'receiv_user'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_sale_sample" model="ir.actions.act_window">
            <field name="name">sale.sample</field>
            <field name="res_model">sale.sampleone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>
                    Click to start creating a new
                </p>
            </field>
        </record>

        <menuitem id="menu_sale_sample" parent="base.menu_sales" name="Sample Informat" sequence="10"
                  action='action_sale_sample' groups="base.group_sale_salesman"/>
    </data>
</openerp>