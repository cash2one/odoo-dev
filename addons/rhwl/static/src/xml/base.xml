<?xml version="1.0" encoding="utf-8" ?>
<templates id="template" xml:space="preserve">
    <!-- UserMenu -->
    <t t-extend="UserMenu">
        <t t-jquery="ul.dropdown-menu" t-operation="replace">

            <ul class="dropdown-menu">
                <li><a href="#" data-menu="settings">Preferences</a></li>
                <li><a href="#" data-menu="about">About Odoo</a></li>
                <li><a href="#" data-menu="logout">Log out</a></li>
            </ul>
        </t>
    </t>
    <!-- disable ?debug in url -->
    <t t-extend="ViewManagerAction">
        <t t-jquery="select.oe_debug_view" t-operation="replace">
            <select t-if="widget.session.uid === 1 and widget.session.debug" class="oe_debug_view"/>
        </t>
    </t>

    <t t-extend="UserMenu.about">
        <t t-jquery="div.user-body" t-operation="after">
           <div class="user-heading">
            <p>本系统由<a class='btn btn-link' href='mailto:vnsoft.he@gmail.com'>vnsoft.he@gmail.com</a>提供技术服务.</p>
           </div>

        </t>
    </t>

    <t t-name="GetExpressRoute">
        <div style="width:100%">
            <table align="center" style="width:100%">
                <thead>
                    <tr>
                        <th class="oe_form_group_cell oe_form_group_cell_label"><label class="oe_form_label" style="width:10%">时间</label></th>
                        <th class="oe_form_group_cell oe_form_group_cell_label"><label class="oe_form_label" style="width:90%">说明</label></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="reoutelist" t-as="route">
                        <tr>
                            <td class="oe_form_field">
                                <t t-esc="route.accept_time"/>
                            </td>
                            <td class="oe_form_field">
                                <t t-esc="route.remark"/>
                            </td>
                        </tr>

                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>
