<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="rhwl_weixin_menu_tree">
            <field name="name">rhwl.weixin.menu.tree</field>
            <field name="model">rhwl.weixin.usermenu</field>
            <field name="arch" type="xml">
                <tree string="WeiXin">
                    <field name="type"/>
                    <field name="name"/>
                    <field name="key"/>
                    <field name="url"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="rhwl_weixin_menu_form">
            <field name="name">rhwl.weixin.menu.form</field>
            <field name="model">rhwl.weixin.usermenu</field>
            <field name="arch" type="xml">
                <form string="WeiXin">
                    <sheet>
                        <group colspan="8">
                                <field name="type"/>
                                <field name="name"/>
                                <field name="key" attrs="{'readonly':[('type','!=','click')]}"/>
                                <field name="url" attrs="{'readonly':[('type','!=','view')]}"/>
                        </group>
                        <field name="details">
                            <tree>
                                <field name="type"/>
                                <field name="name"/>
                                <field name="key"/>
                                <field name="url"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group colspan="8">
                                            <field name="type"/>
                                            <field name="name"/>
                                            <field name="key" attrs="{'readonly':[('type','!=','click')]}"/>
                                            <field name="url" attrs="{'readonly':[('type','!=','view')]}"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="rhwl_weixin_menu_search">
            <field name="name">rhwl.weixin.menu.search</field>
            <field name="model">rhwl.weixin.usermenu</field>
            <field name="arch" type="xml">
                <search string="Sale Sample">

                </search>
            </field>
        </record>
        <record id="action_rhwl_weixin_menu" model="ir.actions.act_window">
            <field name="name">微信自定义菜单</field>
            <field name="res_model">rhwl.weixin.usermenu</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>
                    Click to start creating a new
                </p>
            </field>
        </record>

        <menuitem id="menu_rhwl_weixin_menu" parent="menu_weixin_first" name="自定义菜单" sequence="20"
                  action='action_rhwl_weixin_menu' />
    </data>
</openerp>